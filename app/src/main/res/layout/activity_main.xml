<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE5E5E5">

    <ImageView
        android:id="@+id/salaryCalculatorImageView"
        android:layout_width="380dp"
        android:layout_height="377dp"
        android:layout_marginTop="32dp"
        android:scaleType="center"
        android:src="@drawable/salryimg"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/welcomeMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/salaryCalculatorImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Welcome to My Salary Calculator"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeMessageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#FF0099CC"
        android:onClick="onClick"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/searchEmployeeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#FF0099CC"
        android:onClick="onClick"
        android:text="Search Employee ID"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</RelativeLayout>
